<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:background="#2E2B2B"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="+"
        android:textColor="#FFFFFF"
        android:translationX="0dip"
        android:translationY="0dip" />

    <TextView
        android:id="@+id/etDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2B2B"
        android:ems="10"
        android:fontFamily="monospace"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="23343434343434"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#DBD2D2"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:forceDarkAllowed="false"
        android:gravity="top|end"
        android:longClickable="false"
        android:measureWithLargestChild="false"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b7"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:forceDarkAllowed="false"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="7"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/b8"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="8"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/b9"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="9"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/b0"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="0"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/bdivide"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:insetLeft="0dp"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="/"
                android:text="/"
                android:textColor="#FFC107"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/bponto"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:tag="."
                android:text="."
                android:textColor="#FFC107"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b4"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="4"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/b5"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="5"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/b6"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="6"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/bdiminui"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:tag="-"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/bmultiplica"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="*"
                android:text="x"
                android:textColor="#FFC107"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/btnBackSpace"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="auto"
                android:maxWidth="50dp"
                android:minWidth="80dip"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="BS"
                android:text="BS"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#5C6BC0"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="1"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/b2"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="2"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/b3"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="3"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/bsoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="+"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/bigual"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="80dp"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="="
                android:text="="
                android:textColor="#FFC107"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/btnLimpar"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="auto"
                android:minWidth="80dip"
                android:minHeight="45dip"
                android:onClick="botaoClick"
                android:tag="C"
                android:text="C"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#5C6BC0"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </TableRow>
    </TableLayout>
</LinearLayout>